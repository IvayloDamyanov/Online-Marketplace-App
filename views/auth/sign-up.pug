extends ../_shared/_master
block body
    form(action='/auth/sign-up', method="POST")
        input.form-control(type="text" name="username" placeholder="Enter username")
        input.form-control(type="password" name="password" placeholder="Enter password")
        input.form-control(type="text" name="nickname" placeholder="Enter nickname")
        input.form-control(type="text" name="age" placeholder="Enter age")
        label.radio-inline
            | Male
            input.radio-inline(type="radio" name="gender" value="male")
        label.radio-inline
            | Female
            input.radio-inline(type="radio" name="gender" value="female")
        label.radio-inline
            | Other
            input.radio-inline(type="radio" name="gender" value="other")
        input.form-control(type="text" name="interests" placeholder="Enter interests")
        button.btn.btn-success
           | Sign Up