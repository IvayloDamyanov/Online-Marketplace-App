mixin nav()
    script(src="/static/js/nav.js")
    nav.nav
        ul.list.list-horizontal
            li.list-item
                a.nav-btn(href="/")
                    | Marketplace System
            if user
                li.list-item.dropdown
                    a.nav-btn.dropdown-toggle#nav-btn-toggle-items(href="#")
                        =user.username
                    ul.dropdown-list.list
                        li.list-item
                            form(action="/auth/sign-out" method="get")
                                button.nav-btn
                                    | sign-out
                li.list-item.dropdown
                   a.nav-btn.dropdown-toggle#nav-btn-toggle-items(href="#")
                         ='Settings'
                   ul.dropdown-list.list
                      li.list-item
                         a.nav-btn#nav-btn-item-all(href="/settings/users")
                            | User
                      li.list-item
                         a.nav-btn#nav-btn-item-add(href="settings/updateProfile")
                            | Update
                            | Profile
            else
                li.list-item.dropdown
                    a.nav-btn.dropdown-toggle#nav-btn-toggle-items(href="#")
                        | User
                    ul.dropdown-list.list
                        li.list-item
                            a.nav-btn#nav-btn-item-all(href="/auth/sign-up")
                                | Sign Up
                        li.list-item
                            a.nav-btn#nav-btn-item-add(href="/auth/sign-in")
                               | Sign In
            li.list-item.dropdown
               a.nav-btn.dropdown-toggle#nav-btn-toggle-items(href="adverts")
                 | Adverts
            li.list-item.dropdown
               a.nav-btn.dropdown-toggle#nav-btn-toggle-items(href="#")
                 | Search
               ul.dropdown-list.list
                   li.list-item
                     a.nav-btn#nav-btn-item-all(href="/adverts")
                              | Search ads
