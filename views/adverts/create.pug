extends ../_shared/_master
block body
    .container
        if user
            h3.col-xs-6
                form#create-heading(action = "/adverts/ads/" method = "post")
                    | Create/Update by number
                    div.h4
                        div= 'Num: '
                        input(type="text" name="num" value="")
                        div= 'Name: '
                        input(type="text" name="name" value="")
                        div= 'Town: '
                        input(type="text" name="town" value="")
                        div= 'Category: '
                        input(type="text" name="category" value="")
                        div= 'Description: '
                        textarea(type="text" rows="5" name="description" value="")
                        data(name="owner" value=user)
                    input(type="submit", value="Create/Update")